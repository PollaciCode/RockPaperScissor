player_rpc = input()
if player_rpc == "rock":
  player_rpc_num = 1

elif player_rpc == "paper":
  player_rpc_num = 2

else:
  player_rpc_num = 3 


if rpc_num == player_rpc_num:
  print("It's a tie")
elif player_rpc_num == 3:
  if rpc_num == 2:
    print("you win")
  elif rpc_num == 1:
    print("you lose")
elif player_rpc_num == 1:
    if rpc_num > 1:
      print("you win")

elif player_rpc_num < 3:
  if player_rpc_num > rpc_num:
    print("you win")
